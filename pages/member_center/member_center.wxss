page {
  background: #f5f5f5;
}

.head_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.head_top {
  padding: 20rpx;
  background: #242424;
}

.qunname_box {
  overflow: hidden;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.up_title {
  font-size: 34rpx;
  margin-bottom: 18rpx;
  color: #fff;
  display: flex;
  align-items: center;
}

.qun_name {
  flex: 1;
}

.jidu_box {
  font-size: 26rpx;
  color: #ebcd8f;
  text-align: right;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.overflow_words {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.svip_icon {
  width: 90rpx;
  height: 30rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  display: block;
}

/* 详情介绍 */

.black {
  background: #242424;
  height: 180rpx;
}

.details_box {
  position: relative;
  min-height: 990rpx;
}

.details_info {
  width: 650rpx;
  padding-bottom: 30rpx;
  background: #fff;
  border-radius: 30rpx;
  position: absolute;
  top: 2%;
  left: 6%;
}

/* 普通会员样式设置 */

.geneal_title {
  height: 90rpx;
  background: linear-gradient(117deg, rgba(235, 205, 143, 1), rgba(255, 237, 200, 1));
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #664706;
  font-weight: 600;
}

.list_box {
  width: 90%;
  height: 502rpx;
  overflow-y: auto;
  margin: 0 auto;
  padding: 25rpx 0;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #666;
  text-align: justify;
  margin-bottom: 30rpx;
}

.dotted {
  width: 18rpx;
  height: 18rpx;
  background: #ebcd8f;
  border-radius: 50%;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.list_item {
  margin-bottom: 10rpx;
}

