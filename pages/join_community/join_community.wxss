page{
  background: #f5f5f5;
}
.head_top {
  padding: 0 30rpx;
  height: 200rpx;
  background: #5902e8;
}

.qun_img {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}

.erwei_code {
  width: 50rpx;
  height: 50rpx;
  margin-left: 147rpx;
}

.title {
  color: #fff;
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-weight: 500;
}

.inter_box {
  overflow: hidden;
  margin-top: 35rpx;
}

.qun_numberbox {
  display: flex;
  color: #fff;
  font-size: 28rpx;
  margin-top: 28rpx;
}
.qun_number {
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: rgba(255, 255, 255, 0.6);
}
.left_box {
  display: flex;
  align-items: center;
}

.copy_btn {
  width: 90rpx;
  height: 44rpx;
  background: #fff;
  text-align: center;
  line-height: 44rpx;
  border-radius: 22rpx;
  color: #5902e8;
  font-size: 22rpx;
}

